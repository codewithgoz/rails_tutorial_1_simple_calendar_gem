<div class="container p-5">

  <div class="columns has-background-white-ter mt3">
    <div class="column">
      <div class="is-size-3 has-text-centered p-3">
        Consultorio del Dr. Verruga Urquieta<br>
        <span class="is-size-5">Sistema Administrador de Citas</span>
      </div>  
    </div>
    <div class="column is-one-fifth">
      <div class="has-text-centered mt-6">
        <%= link_to "AGREGAR CITA", new_appointment_path, class:'button is-warning' %>
      </div>
    </div>
  </div>

  <% if notice %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <%= month_calendar(events: @appointments) do |date, appointments| %>
    <%= date.day %>
    <% appointments.each do |appointment| %>
      
      <div class="py-5 px-3 has-text-centered has-background-white-ter mt-3">
        <%= appointment.start_time.strftime('%H:%M') %> hrs.<br>
        <%= link_to appointment.name, appointment %>
        <div class="mt-3">
          <%= link_to "EDITAR", edit_appointment_path(appointment), class:'button is-small'%>
        </div>
      </div>

    <% end %>

  <% end %>


</div>